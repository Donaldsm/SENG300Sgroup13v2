@page
@model SENG300Scholarships.Pages.Submissions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="site.css">

<h1>Submissions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].GPA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].ScholarshipID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].ReferenceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].ReferenceEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission[0].File)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Submission) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScholarshipID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <form asp-page-handler="download" asp-route-filename="@item.File" method="post">
                    <button class="btn btn-default">download</button>
                </form>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubmissionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubmissionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubmissionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
