@page
@model SENG300Scholarships.Pages.Scholarships.IndexModel

@{
    ViewData["Title"] = "Index";
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        body {
            font-family: Arial;
        }

        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

            .tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
            }

                /* some weird thing */
                .tab button:hover {
                    background-color: #ddd;
                }

                .tab button.active {
                    background-color: #ccc;
                }


        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }
    </style>
    <title> Home </title>
    <header>
        <h1> University of Saskatchewan </h1>
        <h2> Instructor's Portal for Awards, Scholarships and Bursaries </h2>
    </header>
</head>

<div class="tab">
    <button class="tablinks" onclick="openTab(event, 'Home')" id="defaultOpen"> Home </button>
    <button class="tablinks" onclick="openTab(event, 'Scholarships')"> Scholarships </button>
    <button class="tablinks" onclick="openTab(event, 'Nomination')"> Nominations </button>
    <button class="tablinks" onclick="openTab(event, 'SubmittedNomination')"> Submitted Nominations </button>
    <button class="tablinks" onclick="openTab(event, 'Profile')"> Profile</button>
</div>

<div id="Home" class="tabcontent">
    <h4> News and Dates </h4>
    <h5> <a asp-page="/Submissions/Index">Learn More</a> </h5>
</div>

<div id="Scholarships" class="tabcontent">
    <h3>Nomination</h3>
    <h4> Search for awards for nominations</h4>
    <h5> Search through database of awards and scholarships </h5>
    <h5> <button style="button"> Apply filter </button> </h5>
    <h4> Filter here! List of all scholarships! No scholarships at the moment! </h4>
</div>


<div id="Nomination" class="tabcontent">
    <h3>Nomination</h3>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Scholarship ID</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" placeholder="Scholarship ID for nomination" name="email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Student ID</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="pwd" placeholder="Student ID for nomination" name="pwd">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                </div>
                <textarea class="form-control" placeholder="Letter for nomination of the student" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>


<div id="SubmittedNomination" class="tabcontent">
    <h3>Status of Submitted Nomination</h3>

</div>

<div id="Profile" class="tabcontent">
    <h3>Profile</h3>
    <p>Edit your profile</p>
</div>

<script>function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
    document.getElementById("defaultOpen").click();</script>


